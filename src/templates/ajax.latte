{snippet ajaxEvents}
    {foreach $pixelId as $id}
        <script>
            {foreach $ajaxEvents as $event => $values}
                fbq('init', {$apiKey});
                fbq('track', {$event}, {
                {foreach $values as $variable => $value}
                    {$variable|noescape}: {$value},
                {/foreach}
                });
            {/foreach}
        </script>
    {/foreach}
{/snippet}